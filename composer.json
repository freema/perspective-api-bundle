{
    "name": "freema/perspective-api-bundle",
    "description": "Symfony bundle for Google Perspective API - AI-powered content moderation with flexible threshold management, caching support, and multiple usage patterns. Modern alternative to abandoned wrappers.",
    "type": "symfony-bundle",
    "keywords": [
        "symfony",
        "bundle",
        "perspective-api",
        "google",
        "content-moderation",
        "toxicity",
        "ai",
        "moderation",
        "comment-filter",
        "text-analysis",
        "content-safety"
    ],
    "homepage": "https://github.com/freema/perspective-api-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Freema",
            "homepage": "https://github.com/freema"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.1",
        "symfony/http-kernel": "^5.4|^6.4|^7.1",
        "symfony/framework-bundle": "^5.4|^6.4|^7.1",
        "symfony/dependency-injection": "^5.4|^6.4|^7.1",
        "symfony/config": "^5.4|^6.4|^7.1",
        "symfony/http-client": "^5.4|^6.4|^7.1",
        "symfony/yaml": "^5.4|^6.4|^7.1",
        "symfony/cache": "^5.4|^6.4|^7.1",
        "symfony/validator": "^5.4|^6.4|^7.1",
        "symfony/http-client-contracts": "^2.5|^3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.14",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^9.5|^10.0",
        "symfony/debug-bundle": "^5.4|^6.4|^7.1",
        "symfony/dotenv": "^5.4|^6.4|^7.1",
        "symfony/monolog-bundle": "^3.8",
        "symfony/web-profiler-bundle": "^5.4|^6.4|^7.1",
        "symfony/routing": "^5.4|^6.4|^7.1"
    },
    "autoload": {
        "psr-4": {
            "Freema\\PerspectiveApiBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Freema\\PerspectiveApiBundle\\Tests\\": "tests/",
            "Freema\\PerspectiveApiBundle\\Dev\\": "dev/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "cs": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix",
        "phpstan": "phpstan analyse src"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    }
}