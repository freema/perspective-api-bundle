# Perspective API Configuration
PERSPECTIVE_API_KEY=your_real_api_key_here

# Threshold Configuration (optional - defaults to values below)
# THRESHOLD_TOXICITY=0.5
# THRESHOLD_SEVERE_TOXICITY=0.3
# THRESHOLD_IDENTITY_ATTACK=0.5
# THRESHOLD_INSULT=0.5
# THRESHOLD_PROFANITY=0.5
# THRESHOLD_THREAT=0.5

# Analysis Attributes (comma-separated, optional)
# ANALYZE_ATTRIBUTES=TOXICITY,SEVERE_TOXICITY,IDENTITY_ATTACK,INSULT,PROFANITY,THREAT

# Other Settings (optional)
# DEFAULT_LANGUAGE=en
# ALLOW_RUNTIME_OVERRIDE=true

# HTTP Client Proxy Configuration (optional)
# HTTP_PROXY=http://proxy.company.com:8080
# HTTPS_PROXY=http://proxy.company.com:8080
# NO_PROXY=localhost,127.0.0.1,.local

# SSL Verification (for development/testing only)
# HTTP_CLIENT_VERIFY_PEER=false
# HTTP_CLIENT_VERIFY_HOST=false

# Development Settings
APP_ENV=dev
APP_DEBUG=true